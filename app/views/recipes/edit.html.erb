<%= form_for @recipe do |f| %>
  Name: <%= f.text_field :name %>
  Ingredients: <% Ingredient.all.each do |ingredient| %>
    <%= f.label :ingredients, {value: "#{ingredient.name}"} %>
    <%= f.check_box :ingredients, {name: "recipe[ingredient_ids][]", id: "#{ingredient.name}", checked: (true if @recipe.ingredients.include?(ingredient))},  "#{ingredient.id}", false %>
  <% end %>
  <%= f.submit %>
<% end %>
